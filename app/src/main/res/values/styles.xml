<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WTW" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- Customize primary dark color -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <!-- Customize accent color -->
        <item name="colorAccent">@color/white</item>

    </style>
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Color for the unselected icon -->
        <item name="itemIconTint">@color/bottomNavigationInactive</item>
        <!-- Color for the selected icon -->
        <item name="itemTextColor">@color/bottomNavigationActive</item>
    </style>
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Customize the color of the text inside DatePicker -->
        <item name="android:textColorPrimary">@color/purple_200</item>
        <!-- Customize the header background of the DatePicker -->
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Widget.Button.Colored" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_background</item>
        <item name="android:textColor">@color/white</item>
        <!-- Optionally add other styling rules here -->
    </style>
    <color name="primaryColor">#CBA4A4</color>
    <color name="primaryDarkColor">#CBA4A4</color>
    <color name="accentColor">#FF4081</color>


    <!-- Customize accent color -->
</resources>


