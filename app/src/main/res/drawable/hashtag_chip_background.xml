<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background for selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_200" /> <!-- Background color when chip is selected -->
            <corners android:radius="24dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Background for default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background color -->
            <stroke
                android:width="2dp"
                android:color="@color/purple_200" /> <!-- Border color for default state -->
            <corners android:radius="24dp" /> <!-- Rounded corners -->
        </shape>
    </item>

</selector>
